{% extends "base.html.twig" %}
{% block body %}
    <div class="container">
        <div>
            <h2 style="text-align: center; color: red">Black Friday !!! du 22 au 29 Novembre | -70%</h2>
{% for evenement in evenements if evenements is not empty %}
    <div style="margin-top: 5%; margin-left: 15%">
        <div class="card" style="width: 25%; height: 20%;margin-bottom: 5%; margin-left: 2%; float: left; align: center">
            <img width="200px" height="180px" class="card-img-top" src="{{asset('images/')}}{{evenement.photo}}" alt="image de {{evenement.nom}}">
            <div class="card-body">
                <h5 class="card-title">{{ evenement.nom }}</h5>
                <p class="card-text">{{ evenement.description }}</p>
                {% if role=='ROLE_CLIENT' %}
                    <form action="{#{{ path('panier.ajout',{id: evenement.getId()}) }}#}">
                     <button type="submit" class="btn btn-primary" >Ajouter au Panier</button>
                        <input type="number" min="1" max="10" value="1" name="qte" style=" margin-left: 5%; width: 2em">
                    </form>
                {% endif %}
            </div>
        </div>
    </div>
{% else %}
    <tr class="table-warning"><td>Pas d'Evenements</td></tr>
{% endfor %}
        </div>
    </div>
{% endblock %}