{% extends "base.html.twig" %}
{% block body %}
    <div class="container">
        <form method="post" action="{{ path('Evenement.validEditEvenement') }}">
            <legend>Créer un Evenement</legend>
            <div class="form-group">
                <label>Nom :</label>
                <input name="nom"  type="text"  size="18" value="{{donnees.nom|default('')}}" class="form-control" >
                {% if erreurs.nom is defined %}
                    <div class="invalid-feedback d-block">{{erreurs.nom}}</div>
                {% endif %}
            </div>
            <div class="form-group">
                <label>Date :</label>
                <input name="dateEvenement"  type="date" size="18" value="{{donnees.dateEvenement|date('d-m-Y') |default('')}}" placeholder="d-m-Y" class="form-control">
                {% if erreurs.date is defined %}
                    <div class="invalid-feedback d-block">{{erreurs.date}}</div>
                {% endif %}
            </div>
            <div class="form-group">
                <label>Categorie :</label>
                <select name="categorie" class="form-control">
                    <option value="">Veuillez sélectionner une Depense</option>
                    {% for categorieE in categorie %}
                        <option value="{{ categorieE.id |default('')}}">
                            {{ categorieE.libelle }}
                        </option>
                    {% endfor %}
                </select>
                {% if erreurs.categorie is defined %}
                    <div class="invalid-feedback">{{erreurs.categorie}}</div>
                {% endif %}
            </div>
            <div class="form-group">
                <label>Description :</label>
                <input name="description"  type="text"  size="255" value="{{donnees.description|default('')}}" class="form-control" >
            </div>
            <div class="form-group">
                <label>Prix :</label>
                <input name="prix"  type="text"  size="255" value="{{donnees.prix|default('')}}" class="form-control" >
                {% if erreurs.prix is defined %}
                    <div class="invalid-feedback d-block">{{erreurs.prix}}</div>
                {% endif %}
            </div>
            <div class="form-group">
                <label>Nombre de places :</label>
                <input name="nbPlaces"  type="text"  size="255" value="{{donnees.nbPlaces|default('')}}" class="form-control" >
                {% if erreurs.nbPlaces is defined %}
                    <div class="invalid-feedback d-block">{{erreurs.nbPlaces}}</div>
                {% endif %}
            </div>
            <div class="form-group">
                <label>Photo :</label>
                <input name="photo"  type="text"  size="255" value="{{donnees.photo|default('noImage.jpg')}}" class="form-control" >
            </div>
            <div class="form-group">
                <input name="Id"  type="hidden"  size="18" value="{{donnees.id|default('')}}" class="form-control" >
                <input type="hidden" name="token" value="{{ csrf_token('edit_valid') }}">
            </div>
            <button type="submit" class="btn btn-primary">{{ button|default('Valider') }}</button>
        </form>
    </div>
{% endblock %}